{% extends 'base.html.twig' %}

{% block title %}Liste des invités{% endblock %}

{% block body %}
    <h1 class="mt-5 text-center">Liste des invités</h1>
    <div class="jumbotron my-5">
        <div class="row w-100">
            <div class="col-md-4">
                <div class="card border-info mx-sm-1 p-3">
                    <div class="text-info text-center mt-1"><h4>Pending</h4></div>
                    <div class="text-info text-center mt-1"><h1>{{ pending_guests }}</h1></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success mx-sm-1 p-3">
                    <div class="text-success text-center mt-1"><h4>Accepted</h4></div>
                    <div class="text-success text-center mt-1"><h1>{{ accepted_guests }}</h1></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-danger mx-sm-1 p-3">
                    <div class="text-danger text-center mt-1"><h4>Rejected</h4></div>
                    <div class="text-danger text-center mt-1"><h1>{{ rejected_guests }}</h1></div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="jumbotron my-5">
        <div class="row w-100">
            <div class="col-md-6">
                <div class="card border-dark mx-sm-1 p-3">
                    <div class="text-dark text-center mt-1"><h4>Houssem</h4></div>
                    <div class="text-dark text-center mt-1"><h1>{{ houssem_guests }}</h1></div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-dark mx-sm-1 p-3">
                    <div class="text-dark text-center mt-1"><h4>Zbaida</h4></div>
                    <div class="text-dark text-center mt-1"><h1>{{ zbaida_guests }}</h1></div>
                </div>
            </div>

        </div>
    </div>
    <hr>
    <section>
        <div class="d-grid gap-2 col-6 mx-auto">
            <a class="btn btn-primary btn-b" href="{{ path('app_guest_new') }}">Ajouter un(e) invité(e)</a>
        </div>
    </section>
    <div class="table-responsive">
        <table class="table mt-5">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Nombre d'invités</th>
                <th>Statut</th>
                <th>Numéro de téléphone</th>
                <th>hôte</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for guest in guests %}
                <tr>
                    <td>{{ guest.name }}</td>
                    <td>{{ guest.guestsNumber }}</td>
                    <td class="badge bg-{% if guest.status == 'Pending' %}info text-dark{% elseif guest.status == 'Accepted' %}success{% elseif guest.status == 'Rejected' %}danger{% endif %}">
                        {{ guest.status }}
                    </td>
                    <td>{{ guest.phoneNumber }}</td>
                    <td>{{ guest.owner }}</td>
                    <td class="btn-group">
                        <a href="{{ path('app_guest_edit', {'id' : guest.id})}}" class="btn btn-warning">Modifier</a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun invitée pour l'instant</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
